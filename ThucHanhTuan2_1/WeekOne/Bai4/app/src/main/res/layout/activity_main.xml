<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ff99"
        android:gravity="center"
        android:text="Thông Tin Cá Nhân"
        android:textColor="#ff5050"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Họ Và Tên"
            android:textColor="#000" />

        <EditText
            android:id="@+id/edtHoVaTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="CMND"
            android:textColor="#f000" />

        <EditText
            android:id="@+id/edtCMND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33ccff"
        android:gravity="center"
        android:textColor="#ff5050"
        android:text="Bằng Cấp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/radioButton_TrungCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung Cấp"
            android:textColor="#f000" />

        <RadioButton
            android:id="@+id/radioButton_CaoDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao Đẳng"
            android:textColor="#f000" />

        <RadioButton
            android:id="@+id/radioButton_DaiHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Đại Học"
            android:textColor="#f000" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở Thích"
        android:background="#33ccff"
        android:textColor="#ff5050"
        android:gravity="center"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <CheckBox
            android:id="@+id/checkbox_DocSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="#f000"
            android:text="Đọc Sách" />

        <CheckBox
            android:id="@+id/checkbox_DocBao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f000"
            android:text="Đọc Báo" />
        <CheckBox
            android:id="@+id/checkbox_DocCoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f000"
            android:text="Đọc Coding" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông Tin Bổ Sung"
        android:background="#33ccff"
        android:textColor="#ff5050"
        android:gravity="center"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnGuiThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi Thông Tin"
        android:textColor="#f000" />


</LinearLayout>